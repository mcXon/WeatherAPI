<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_zipcode_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/zip_code_hint"/>

    <Spinner
        android:id="@+id/sp_measurement_types"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_zipcode_input"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btn_display_forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/search_btn_text"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/sp_measurement_types"
        />

</androidx.constraintlayout.widget.ConstraintLayout>